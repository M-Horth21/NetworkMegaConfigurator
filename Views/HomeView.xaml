<UserControl x:Class="NetworkMegaConfigurator.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkMegaConfigurator.Views" 
             mc:Ignorable="d" 
             d:DesignHeight="660" d:DesignWidth="560">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <TextBlock 
      Grid.Row="0"
      Text="Favorites" 
      FontSize="24" 
      Margin="0,20,0,10"/>
    <ScrollViewer 
      Grid.Row="1"
      HorizontalScrollBarVisibility="Hidden"
      VerticalScrollBarVisibility="Disabled"
      PreviewMouseWheel="OnRecentActionMouseWheel">
      <StackPanel
        Orientation="Horizontal">
        <Button
          Height="30"
          Padding="5 0 5 0"
          Margin="0 0 5 0">
          <TextBlock
            Text="Coming soon"
            FontSize="12"/>
        </Button>
        <Button
          Height="30"
          Padding="5 0 5 0"
          Margin="0 0 5 0">
          <TextBlock
            Text="Coming soon"
            FontSize="12"/>
        </Button>
        <Button
          Height="30"
          Padding="5 0 5 0"
          Margin="0 0 5 0">
          <TextBlock
            Text="Coming soon"
            FontSize="12"/>
        </Button>
        <Button
          Height="30"
          Padding="5 0 5 0"
          Margin="0 0 5 0">
          <TextBlock
            Text="Coming soon"
            FontSize="12"/>
        </Button>
        <Button
          Height="30"
          Padding="5 0 5 0"
          Margin="0 0 5 0">
          <TextBlock
            Text="Coming soon"
            FontSize="12"/>
        </Button>
      </StackPanel>
    </ScrollViewer>
    <TextBlock 
      Grid.Row="2"
      Text="Recent actions" 
      FontSize="24" 
      Margin="0,20,0,10"/>
    <ScrollViewer 
      Grid.Row="3"
      HorizontalScrollBarVisibility="Hidden"
      VerticalScrollBarVisibility="Disabled"
      PreviewMouseWheel="OnRecentActionMouseWheel">
      <StackPanel
        Orientation="Horizontal">
        <Button
          Height="30"
          Padding="5 0 5 0"
          Margin="0 0 5 0">
          <TextBlock
            Text="Coming soon"
            FontSize="12"/>
        </Button>
        <Button
          Height="30"
          Padding="5 0 5 0"
          Margin="0 0 5 0">
          <TextBlock
            Text="Coming soon"
            FontSize="12"/>
        </Button>
        <Button
          Height="30"
          Padding="5 0 5 0"
          Margin="0 0 5 0">
          <TextBlock
            Text="Coming soon"
            FontSize="12"/>
        </Button>
        <Button
          Height="30"
          Padding="5 0 5 0"
          Margin="0 0 5 0">
          <TextBlock
            Text="Coming soon"
            FontSize="12"/>
        </Button>
        <Button
          Height="30"
          Padding="5 0 5 0"
          Margin="0 0 5 0">
          <TextBlock
            Text="Coming soon"
            FontSize="12"/>
        </Button>
        <!--<components:QuickAction/>
        <components:QuickAction/>
        <components:QuickAction/>
        <components:QuickAction/>-->
      </StackPanel>
    </ScrollViewer>

    <TextBlock
      Grid.Row="4"
      Text="Adapters" 
      FontSize="24" 
      Margin="0,20,0,10"/>

    <ScrollViewer 
          Grid.Row="5" 
          HorizontalScrollBarVisibility="Disabled" 
          VerticalScrollBarVisibility="Hidden">
      <ItemsControl
        Background="Transparent"
        BorderBrush="{x:Null}"
        ItemsSource="{Binding Adapters}"
        HorizontalContentAlignment="Stretch">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <local:AdapterButton
              Margin="0 0 0 10"/>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
  </Grid>
</UserControl>