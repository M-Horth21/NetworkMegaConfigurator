<UserControl x:Class="NetworkMegaConfigurator.Components.AdapterButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Name="AdapterButtonControl"
             d:DesignHeight="60" d:DesignWidth="560">
  <Grid>
    <Border 
      Background="#114b9a"
      Width="560"
      Height="60"
      CornerRadius="8"
      Padding="25, 0, 25, 0"
      Margin="0,12,0,0">
      <StackPanel
        VerticalAlignment="Center">
        <TextBlock
          FontSize="16"
          Foreground="#CCFFFFFF"
          Text="{Binding AdapterName, ElementName=AdapterButtonControl}">
        </TextBlock>
        <TextBlock
          FontSize="12"
          Foreground="#7FFFFFFF"
          Text="{Binding AdapterDescription, ElementName=AdapterButtonControl}">
        </TextBlock>
        <TextBlock
          FontSize="12"
          Foreground="#7FFFFFFF"
          Text="{Binding AdapterConfig, ElementName=AdapterButtonControl}">
        </TextBlock>
      </StackPanel>

    </Border>
  </Grid>
</UserControl>
