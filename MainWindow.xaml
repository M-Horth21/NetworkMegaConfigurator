<Window x:Class="NetworkMegaConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkMegaConfigurator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <ListBox x:Name="AdapterList" HorizontalAlignment="Left" Height="270" Margin="45,29,0,0" VerticalAlignment="Top" Width="283" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="OnSelectionChange"/>
    <Button x:Name="btnSetStatic" Content="Set Static" HorizontalAlignment="Center" Height="35" Margin="0,43,0,0" VerticalAlignment="Top" Width="84" Click="btnSetStatic_Click"/>
    <Button x:Name="btnSetDhcp" Content="Set DHCP" HorizontalAlignment="Center" Height="35" Margin="0,98,0,0" VerticalAlignment="Top" Width="84" Click="btnSetDhcp_Click"/>

  </Grid>
</Window>
