<Window x:Class="NetworkMegaConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkMegaConfigurator"
        xmlns:components="clr-namespace:NetworkMegaConfigurator.Components"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Name="MyMainWindow"
        Title="MainWindow" Width="600" Height="800" FontFamily="Bahnschrift" WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" Foreground="{x:Null}">


  <Border CornerRadius="8" Background="#121212">
    <Border.Clip>
      <RectangleGeometry RadiusX="8" RadiusY="8"
                         Rect="0,0,600,800"/>
    </Border.Clip>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="50"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="50"/>
      </Grid.RowDefinitions>

      <Rectangle Fill="#0A0A0A"
                 MouseDown="TopBarMouseDown"/>
      <Label Content="Network Mega-Configurator" 
             IsHitTestVisible="False"
             HorizontalAlignment="Left" Margin="20,0,0,0" Width="400" Foreground="#CCFFFFFF" FontSize="24" AutomationProperties.HelpText="What's this?" VerticalContentAlignment="Center"/>
      <Button x:Name="btnClose" 
              HorizontalAlignment="Right"
              Content="{materialIcons:MaterialIconExt Kind=Close}" 
              Background="{x:Null}" 
              Foreground="#CCFFFFFF" 
              BorderBrush="{x:Null}"
              Click="btnClose_Click">
      </Button>

      <Grid Grid.Row="1"
                  Margin="20,20,20,20">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Content="Recent actions" HorizontalAlignment="Left" Width="400" Foreground="#7EFFFFFF" FontSize="24" VerticalContentAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled"
                    PreviewMouseWheel="OnRecentActionMouseWheel">
          <StackPanel x:Name="stackRecentActions" Orientation="Horizontal">
            <components:QuickAction/>
            <components:QuickAction/>
            <components:QuickAction/>
            <components:QuickAction/>
          </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>

          <Label Content="Adapters" Foreground="#7EFFFFFF" FontSize="24" 
                     VerticalContentAlignment="Bottom"
                     Margin="0,20,0,0"/>
          <materialIcons:MaterialIcon 
            Grid.Column="1"
            Kind="Autorenew"
            Foreground="#77FFFFFF"
            Width="32"
            VerticalAlignment="Bottom"
            MouseDown="OnAdapterListRenew"/>
        </Grid>
        <ScrollViewer 
Grid.Row="3" 
HorizontalScrollBarVisibility="Disabled" 
          VerticalScrollBarVisibility="Hidden">
          <ItemsControl 
            ItemsSource="{Binding NetworkInterfaces, ElementName=MyMainWindow}">
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <components:AdapterButton
                  AdapterName="{Binding Name}"
                  AdapterDescription="{Binding Description}"
                  AdapterConfig="{Binding Config}"/>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </ScrollViewer>
      </Grid>

      <Rectangle Fill="#0A0A0A" Grid.Row="2"/>
    </Grid>
  </Border>
</Window>
